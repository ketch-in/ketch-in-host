{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "umd",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
}
